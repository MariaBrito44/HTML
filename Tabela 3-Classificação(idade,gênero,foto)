    <script>
        document.write("<h1>CLASSIFICAÇÃO DE IDADE E GÊNERO </h1>")
        $idade = prompt("Qual é a sua idade?")
        $genero = prompt("Qual é o seu gênero? [FEMININO/MASCULINO]")

        if ($idade < 18) {
            if ($genero == "masculino") {
                document.write("menino")
            }

            if ($genero == "feminino") {
                document.write("menina")
            }
        }

        else {
            if ($genero == "masculino") {
                document.write("homem")
            }

            if ($genero == "feminino") {
                document.write("mulher")
            }
        }

    </script>


</head>

