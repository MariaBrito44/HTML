        function Validar()
        {
            $login = this.FORM1.fLogin.value;
            $senha = this.FORM1.fSenha.value;
            $qtdCaracteres_login = $login;
            $qtdCaracteres_senha = $senha;

            if($login = "Senai" && $senha == "Sumare")
            {  
                window.location.href = "index1.html"
            }
            else 
            {
                alert("LOGIN OU SENHA INVÁLIDO")  
            }
             
            
            return false;
        }

        
    </script>
