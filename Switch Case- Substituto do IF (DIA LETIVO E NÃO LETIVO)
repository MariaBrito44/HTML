<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <script>
        $dia_da_semana = prompt("Digite o dia da semana: ")
        switch($dia_da_semana)
        {
            case "Segunda":
            case "Terça":
            case "Quarta":
            case "Quinta":  
            case "Sexta":
                document.write("Dia letivo / Dia da semana ")
                break;

            case "Sábado":
            case "Domingo":
                document.write("Dia não letivo / Fim de semana ")
                break;

            default:
                document.write("Opção Inválida!") 
                break;   

        }
    </script>
</head>
<body>
    
</body>
</html>
